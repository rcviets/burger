<h1>Burgers</h1>

<h2>Burgers That Need To Be Devoured!</h2>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
            <li>
                <p>
                    {{this.id}}.{{this.burger_name}}

                    <button data-burgerid='{{this.id}}' class='devourBurger'>Devour Burger!</button>
                </p>
            </li>
        {{/unless}}
    {{/each}}
</ul>

<h2>Burges That Have Been Devoured!</h2>

<ul>
    {{#each burgers}}
        {{#if devoured}}
            <li>
                <p>
                    {{this.id}}.{{this.burger_name}}
                </p>
            </li>
        {{/if}}
    {{/each}}
</ul>

<h2>Add A Burger</h2>
<form class='create-form'>

    <div class='form-group'>
        <label for='bg'>Burger Name:</label>
        <input type='text' id='bg' name='name'>
    </div>

    <button type='submit'>Add Burger!</button>
</form>